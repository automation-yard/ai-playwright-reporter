{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    /* Bundled projects */
    "module": "NodeNext",
    "rootDir": ".",
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
